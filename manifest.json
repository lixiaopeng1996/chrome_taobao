{
  "manifest_version": 2,
  "name": "淘宝商品采集插件",
  "version": "1.0",
  "description": "采集插件",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "淘宝商品采集插件"
  },
  "background": {
    "scripts": ["js/jquery-1.9.1.min.js", "js/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://item.taobao.com/*"],
      "js": ["js/jquery-1.9.1.min.js", "js/js.cookie.js", "js/tb.js"]
    },
    {
      "matches": ["https://detail.tmall.com/*"],
      "js": ["js/jquery-1.9.1.min.js", "js/js.cookie.js", "js/tm.js"]
    }
  ],
  "permissions": [
    "tabs", "storage"
  ]
}