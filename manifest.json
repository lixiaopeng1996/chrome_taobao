{
  "name": "Download Selected Links",
  "description": "Select links on a page and download them.",
  "version": "0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "images/icon38.png",
    "default_title": "Your title"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://item.taobao.com/*"],
      "js": ["js/jquery-1.9.1.min.js", "js/js.cookie.js", "js/tb.js"]
    },
    {
      "matches": ["https://detail.tmall.com/*"],
      "js": ["js/jquery-1.9.1.min.js", "js/js.cookie.js", "js/tm.js"]
    }
  ],
  "permissions": [
    "tabs"
  ]
}